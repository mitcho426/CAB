<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context="com.example.mitchell.cabapp.WelcomeActivity">

    <Button
        android:id="@+id/welcome_driver_BTN"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="202dp"
        android:background="@android:color/background_light"
        android:text="I'M A DRIVER"
        android:textSize="14sp" />

    <Button
        android:id="@+id/welcome_customer_BTN"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/welcome_driver_BTN"
        android:layout_alignTop="@+id/welcome_driver_BTN"
        android:layout_marginTop="68dp"
        android:background="@android:color/holo_red_dark"
        android:text="I'M A CUSTOMER"
        android:textColor="@android:color/background_light" />
</RelativeLayout>
